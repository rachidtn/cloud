{% extends 'base.html.twig' %}

{% block body %}
    <h1>Appointment</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appointment.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ appointment.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ appointment.prenom }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ appointment.cIN }}</td>
            </tr>
            <tr>
                <th>Service</th>
                <td>{{ appointment.service }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ appointment.tel }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ appointment.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('appointment_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('appointment_edit', { 'id': appointment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
